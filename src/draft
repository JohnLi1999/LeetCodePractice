public static int majorityElement(int[] nums) {
    Map<Integer, Integer> map = new HashMap<>();

    for (int num : nums) {
        if (map.containsKey(num)) {
            map.replace(num, map.get(num) + 1);
        } else {
            map.put(num, 1);
        }
    }

    int half = nums.length / 2;
    for (Integer num : map.keySet()) {
        if (map.get(num) > half) {
            return num;
        }
    }

    return 0;
}