public static int lengthOfLastWord(String s) {
    int count = 0;

    for (int i = s.length() - 1; i >= 0; i--) {
        if (isLetter(s.charAt(i))) {
            count++;
        } else {
            if (count != 0) {
                break;
            }
        }
    }

    return count;
}

public static boolean isLetter(char c) {
    return (c >= 'a' && c <= 'z') || (c >= 'A' && c <= 'Z');
}