public static boolean hasCycle(ListNode head) {
    if (head == null || head.next == null) return false;

    ListNode slow = head, fast = head.next;

    while (true) {
        if (fast.equals(slow)) {
            return true;
        } else if (fast.next == null || fast.next.next == null) {
            return false;
        } else {
            slow = slow.next;
            fast = fast.next.next;
        }
    }
}