public static int maxProfit(int[] prices) {
    int profit = 0;
    int buy;

    for (int i = 0; i < prices.length - 1; i++) {
        if (prices[i] < prices[i + 1]) {
            buy = prices[i];

            while (i < prices.length - 1 && prices[i] <= prices[i + 1]) {
                i++;
            }

            int sell = prices[i];
            profit += (sell - buy);
        }
    }

    return profit;
}