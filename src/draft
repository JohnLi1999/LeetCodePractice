public static boolean isPerfectSquare(int num) {
    if (num < 2) {
        return true;
    }

    int sqrt = sqrt(num);
    return sqrt * sqrt == num;
}

public static int sqrt(int num) {
    int left = 0, right = num, mid;

    while (left <= right) {
        mid = (left + right) / 2;

        if (mid == num / mid) {
            return mid;
        } else if (mid < num / mid) {
            left = mid + 1;
        } else {
            right = mid - 1;
        }
    }

    return right;
}